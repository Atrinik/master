        <and><check options="classTime" /></and>
        <dialog name="hello">
            <message>I wonder when I learn how to cast Master Spark.</message>
            <response message="What's a Master Spark?" destination="master spark" />
        </dialog>
        <dialog name="master spark">
            <message>Master Spark, that's Marisa's favorite spell!</message>
            <response message="Who is Marisa?" destination="marisa" />
