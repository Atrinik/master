<?xml version="1.0" encoding="UTF-8"?>
<interfaces>
    <interface state="class">
        <and><check options="classTime" /></and>
        <dialog name="hello">
            <message>Hey. Listening to the teacher...</message>
        </dialog>
        <dialog name="alice" regex="alice|margatroid|alice margatroid">
            <message>Maybe later, I've really gotta pass this test.</message>
        </dialog>
    </interface>

    <interface state="club">
        <and><check options="clubTime" /></and>
        <dialog name="hello">
            <message>Too busy now. Trying to win against this cheater.</message>
            <response message="Who is cheating?" npc="smug student witch" destination="cheating" />
        </dialog>
        <dialog name="alice" regex="alice|margatroid|alice margatroid" inherit="hello" />
    </interface>
</interfaces>
