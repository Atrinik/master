<?xml version="1.0" encoding="UTF-8"?>
<interfaces>
    <interface>
        <dialog name="hello">
            <message>Can't you see I'm reading?</message>
            <response destination="reading" message="[b]You[/b] are reading?"/>
            <response action="close" message="Sorry."/>
        </dialog>
        <dialog name="reading">
            <message>Yes. Is it a crime for the daughter of a king to enjoy reading?</message>
        </dialog>
    </interface>
</interfaces>
